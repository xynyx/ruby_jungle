<h1>Create Account</h1>

<%= form_for :user, url: '/users' do |f| %>

  <div style="padding: 1em">First Name: <%= f.text_field :first_name, class: "form-control" %></div>
  <div style="padding: 1em">Last Name: <%= f.text_field :last_name, class: "form-control"%></div>
  <div style="padding: 1em">Email: <%= f.text_field :email, class: "form-control" %></div>
  <div style="padding: 1em">Password: <%= f.password_field :password, class: "form-control" %></div>
  <div style="padding: 1em">Password Confirmation: <%= f.password_field :password_confirmation, class: "form-control" %></div>
  <div style="padding: 1em"><%= f.submit "Submit", class: "btn btn-primary" %></div>

<% end %>